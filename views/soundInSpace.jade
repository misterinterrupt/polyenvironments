//- compCreate.jade
extends ./layout.jade
block styles
  link(href="/css/soundinspace.css", rel="stylesheet")
block main
  div(class="container-fluid")
    div(class="row error")

    div(class="row content")
      div(class="col-sm-5 col-sm-offset-1")
        h2 Sound In Space
        hr
      div(class="col-sm-6 error")
        p This app cannot be used on this device

      div(class="col-sm-6 content")
        h3 (instructions for whenever)
        p Sounds change based on phone orientation. its pretty distracting to play with. 
        p listen to it via headphones on your phone
        p first, turn down your phone volume, http://polyenvironments.net/soundinspace
        p second, click below and then turn up the sound halfway
        p put the phone in your pocket or just hold it out like a star trek phasor
        p move around, slow down and move subtly, flip the phone around and try again

        div(id="status")
          h3 Touch to Load

    div(class="row content")
      div(class="col-sm-6 content")
        canvas(id="canvas2")

block scripts
    script(src='/js/soundjs-0.6.2.min.js')
    script(src='/js/processing-1.4.1.js')
    script(src='/js/app.js')
